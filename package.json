{
	"name": "@grampro/svelte-block",
	"version": "0.0.12",
	"license": "MIT",
	"main": "dist/index.js",
	"author": {
		"name": "Anandhu Remanan"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./Grid.svelte": {
			"types": "./dist/grid/Grid.svelte.d.ts",
			"svelte": "./dist/grid/Grid.svelte"
		},
		"./FilterPopUp.svelte": {
			"types": "./dist/grid/FilterPopUp.svelte.d.ts",
			"svelte": "./dist/grid/FilterPopUp.svelte"
		},
		"./Select.svelte": {
			"types": "./dist/select/Select.svelte.d.ts",
			"svelte": "./dist/select/Select.svelte"
		},
		"./MultiSelect.svelte": {
			"types": "./dist/multiselect/MultiSelect.svelte.d.ts",
			"svelte": "./dist/multiselect/MultiSelect.svelte"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.38",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^1.2.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"clsx": "^2.1.1",
		"flowbite-svelte": "^0.46.0",
		"flowbite-svelte-icons": "^1.5.0",
		"jspdf": "^2.5.1",
		"lucide-svelte": "^0.376.1",
		"xlsx": "^0.18.5"
	}
}
